<div class="container">
  <% @events.each do |event| %>
    <div class="card-product">
      <% if event.photo.attached? %>
        <%= cl_image_tag(event.photo.key)  %>
      <% end %>
      <div class="card-product-infos">
        <% event.bands.each do |band| %>
         <h2><%= band.name %> </h2>
        <% end %>
        <p><%= event.venue.name %> - <%= event.venue.address %></p>
        <p><%= event.date %> - <%= event.price %> Euros</p>
      </div>
    </div>
  <% end %>
</div>






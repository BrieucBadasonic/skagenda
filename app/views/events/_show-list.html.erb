<div class="card-product">
  <% if event.photo.attached? %>
    <%= cl_image_tag(event.photo.key)  %>
  <% end %>
  <div class="card-product-infos">
    <div class="card-product-text">
      <h4><strong><%= event.date %></strong></h4>
      <% event.bands.each do |band| %>
        <h5><%= band.name %> </h5>
      <% end %>
      <p><strong><%= event.venue.name %></strong> - <%= event.venue.address %></p>
      <p><%= event.price %> Euros</p>
    </div>
    <div class="card-product-btn">
      <% if user_signed_in? %>
        <% if policy(event).edit? %>
          <div>
            <%= link_to "Edit event", edit_venue_event_path(event, event.venue),
                        class: "btn-event-card" %>
          </div>
          <div>
            <%= link_to "Delete event",
                        event_path(event),
                        method: :delete,
                        data: { confirm: "Are you sure?"},
                        class: "btn-event-card" %>
          </div>
        <% end %>
        <% if policy(event).confirmation? && !event.confirm %>
          <div>
            <%= simple_form_for event, :url => [:confirmed, event], html: { method: :put } do |f| %>
              <%= f.hidden_field :comfirm, :value => true %>
              <%= f.submit "Confirm event", class: "btn-event-card" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
